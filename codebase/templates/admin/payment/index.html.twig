{% extends 'admin/base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('backend/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}


{% block body %}
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">

        {{ include('admin/_partials/header.html.twig') }}

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card mini-stats-wid border border-1 border-dark">
                                <div class="card-body px-3 py-1">
                                    <div class="d-flex">
                                        <div class="flex-grow-1">
                                            <p class="text-muted fw-medium fs-4">Paiements</p>
                                            <h3 class="mb-0 fw-bolder">{{ payments|length }}</h3>
                                        </div>

                                        <div class="flex-shrink-0 align-self-center">
                                            <div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
                                                <span class="avatar-title">
                                                    <i class="bx bx-copy-alt font-size-16"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="subtitle py-0">Total des paiements</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0 font-size-18">PAIEMENTS</h4>
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="{{path('admin_index')}}">Tableau de bord</a></li>
                                        <li class="breadcrumb-item active">Liste des paiements</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card mini-stats-wid border border-1 border-dark">
                                <div class="card-header border-bottom">
                                    <div class="row g-3">
                                        <div class="col-xxl-1 col-md-1 col-lg-1">
                                            <i class="bx bx-filter-alt"></i>
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="reference" placeholder="Référence">
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="code_payment_operateur" placeholder="Code de paiement">
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="receipt_number" placeholder="Numéro de reçu">
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="operateur" placeholder="Opérateur">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        {{ include('admin/payment/_payment_datatable.html.twig') }}
                                    </div>
                                    <!--end row-->
                                </div>
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->
                </div> <!-- container-fluid -->
            </div><!-- End Page-content -->
            {{ include('admin/_partials/footer.html.twig') }}
        </div>
        <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <div class="modal fade" id="showPaymentModal" tabindex="-1" aria-labelledby="showPaymentModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modifier les informations de paiement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editPaymentModal" tabindex="-1" aria-labelledby="editPaymentModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Informations de paiement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" id="btnEditPaiement">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="newPaymentModal" tabindex="-1" aria-labelledby="newPaymentModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Enregistrer un paiement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" id="btnRegisterPayment">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script src="{{ asset('backend/libs/datatables.net/js/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('backend/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>

<script type="text/javascript">
    jQuery(document).ready(function ($) {

        var datatable = initDatatable();

        $("#numero_carte_grise,#numero_recepisse,#numero_chassis").change(function (e) {
                datatable.draw();
        });


        $('#btnRegisterPayment').click(function(){
            var url = $(this).data('href');
            $.ajax({
                url: url,
                type: 'GET',
                success: function(response){
                    $('#newPaymentModal .modal-body').html(response);
                    $('#newPaymentModal').modal('show');
                }
            });
        });

        $('.btnshow').click(function(){
            var url = $(this).data('href');
            $.ajax({
                url: url,
                type: 'GET',
                success: function(response){
                    $('#showPaymentModal .modal-body').html(response);
                    $('#showPaymentModal').modal('show');
                }
            });
        });

        $('.btnedit').click(function(){
            var url = $(this).data('href');
            $.ajax({
                url: url,
                type: 'GET',
                success: function(response){
                    $('#editPaymentModal .modal-body').html(response);

                    $('#editPaymentModal').modal('show');
                }
            });
        });

        function initDatatable(){
            /* DATATABLE INIT */
            var dt = $('#datatable').DataTable( {
                "responsive": true,
                "language": {
                    url: '//cdn.datatables.net/plug-ins/1.10.16/i18n/French.json',
                    processing: "<img height='32' width='32' src='{{ asset("assets/images/preloaders/5.svg") }}' />",
                    sLoadingRecords :"<img height='32' width='32' src='{{ asset("assets/images/preloaders/5.svg") }} />"
                },
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": '{{ path('admin_payment_dt') }}',
                    "data": function (d) {
                        d.reference = $("#reference").val();
                        d.montant = $("#montant").val();
                        d.status = $("#status").val();
                        d.code_payment_operateur = $("#code_payment_operateur").val();
                        d.receipt_number = $("#receipt_number").val();
                    }
                },
                "columns": [
                    {
                        "class":   "details-control",
                        "orderable": false,
                        "data":      "id",
                        "defaultContent": ""
                    },
                    { "data": "reference" },
                    { "data": "montant" },
                    { "data": "status" },
                    { "data": "operateur" },
                    { "data": "code_payment_operateur" },
                    { "data": "receipt_number" },
                    { "data": "" }
                ],
                "order": [[1, 'asc']]
            } );
            return dt;
        }

    });
</script>
{% endblock %}
