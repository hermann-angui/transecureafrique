{% block javascript %}
{{ parent() }}
<script src="{{ asset('backend/libs/datatables.net/js/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('backend/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
<script src="{{ asset('backend/libs/apexcharts/apexcharts.min.js') }}"></script>
<script src="{{ asset('backend/js/pages/dashboard.init.js') }}"></script>
<script src="{{ asset('backend/libs/echarts/echarts.min.js') }}"></script>
<script src="{{ asset('backend/js/app.js') }}"></script>

<script type="text/javascript">
    jQuery(document).ready(function ($) {

        var datatable = initDatatable();

        $("#numero_carte_grise,#numero_recepisse,#numero_immatriculation,#numero_chassis,#receipt_number,#quicksearch,#numero_telephone_proprietaire").change(function (e) {
                datatable.draw();
        });

        function initDatatable(){
            /* DATATABLE INIT */
            var dt = $('#datatable').DataTable( {
                "responsive": true,
                "language": {
                    url: '//cdn.datatables.net/plug-ins/1.10.16/i18n/French.json',
                    processing: "<img height='32' width='32' src='{{ asset("assets/images/preloaders/5.svg") }}' />",
                    sLoadingRecords :"<img height='32' width='32' src='{{ asset("assets/images/preloaders/5.svg") }} />"
                },
                "processing": true,
                "serverSide": true,
                "searching": false,
                "ajax": {
                    "url": '{{ path('admin_demande_dt') }}',
                    "data": function (d) {
                        d.numero_carte_grise = $("#numero_carte_grise").val();
                        d.numero_recepisse = $("#numero_recepisse").val();
                        d.numero_immatriculation = $("#numero_recepisse").val();
                        d.identite_proprietaire = $("#identite_proprietaire").val();
                        d.identite_proprietaire_piece = $("#identite_proprietaire_piece").val();
                        d.numero_telephone_proprietaire = $("#numero_telephone_proprietaire").val();
                        d.receipt_number = $("#receipt_number").val();
                        d.quicksearch = $("#quicksearch").val();
                    }
                },
                "columns": [
                    {
                        "class":   "details-control",
                        "orderable": false,
                        "data":      "id",
                        "defaultContent": ""
                    },
                    {"data":  "numero_carte_grise"},
                    {"data":  "numero_recepisse"},
                    {"data":  "numero_immatriculation"},
                    { "data": "identite_proprietaire" },
                    { "data": "identite_proprietaire_piece" },
                    { "data": "numero_vin_chassis" },
                    { "data": "receipt_number" },
                    { "data": "" },
                ],
                "order": [[1, 'asc']]
            } );


            return dt;
        }
    });
</script>
