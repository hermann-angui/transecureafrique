{% extends 'admin/base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}


{% block body %}


    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-10 col-xl-10">
                    <div class="card overflow-hidden">
                        <div class="bg-white bg-soft">
                            <div class="d-flex justify-content-center align-content-center">
                                <div>
                                    <img width="200" src="{{ asset('backend/images/logo.png') }}" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="row mt-4 px-5">
                                {{ form_start(registrationForm) }}
                                    {% if error is defined %}
                                        <div class="alert alert-danger">
                                            {{ error.messageKey|trans(error.messageData, 'security') }}
                                        </div>
                                    {% endif %}
                                {{ form_row(registrationForm.lastname) }}
                                {{ form_row(registrationForm.firstname) }}
                                {{ form_row(registrationForm.email, {'attr': {'class': 'required'}}) }}
                                {{ form_widget(registrationForm.password , {'attr': {'class': 'required'}}) }}
                                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': ' required'}}) }}
                                <div class="mt-4 col-md-7">
                                    <input type="submit" value="Créer mon compte" class="btn btn-warning" id="btn-register">
                                </div>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
{{ parent() }}
  <script>
      $('document').ready(function() {
      });

  </script>
{% endblock %}
