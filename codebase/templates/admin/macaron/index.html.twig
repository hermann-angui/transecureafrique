{% extends 'admin/base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('backend/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}


{% block body %}
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">

        {{ include('admin/_partials/header.html.twig') }}


        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card mini-stats-wid border border-1 border-dark">
                                <div class="card-body px-3 py-1">
                                    <div class="d-flex">
                                        <div class="flex-grow-1">
                                            <p class="text-muted fw-medium fs-4">Macarons</p>
                                            <h1 class="mb-0 fw-bolder">{{ macarons|length }}</h1>
                                        </div>

                                        <div class="flex-shrink-0 align-self-center">
                                            <div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
                                                <span class="avatar-title">
                                                    <i class="bx bx-copy-alt font-size-24"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="subtitle py-0">Total des macarons livrés</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0 font-size-18">MACARONS</h4>
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="{{path('admin_index')}}">Tableau de bord</a></li>
                                        <li class="breadcrumb-item active">Liste des macarons</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card mini-stats-wid border border-1 border-dark">
                                <div class="card-header border-bottom">
                                    <div class="row g-3">
                                        <div class="col-xxl-1 col-md-1 col-lg-1">
                                            <i class="bx bx-filter-alt"></i> Filtre :
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="reference" placeholder="Référence">
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="code_payment_operateur" placeholder="Code de paiement">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        {{ include('admin/demande/_demande_datatable.html.twig') }}
                                    </div>
                                    <!--end row-->
                                </div>
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->
            </div><!-- End Page-content -->
            {{ include('admin/_partials/footer.html.twig') }}
        </div>
        <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <!-- Right Sidebar -->

    <!-- /Right-bar -->

    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script src="{{ asset('backend/libs/datatables.net/js/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('backend/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>

<script type="text/javascript">
    jQuery(document).ready(function ($) {

        var datatable = initDatatable();

        $("#numero_carte_grise,#numero_recepisse,#numero_chassis").change(function (e) {
                datatable.draw();
        });


        function initDatatable(){
            /* DATATABLE INIT */
            var dt = $('#datatable').DataTable( {
                "responsive": true,
                "language": {
                    url: '//cdn.datatables.net/plug-ins/1.10.16/i18n/French.json',
                    processing: "<img height='32' width='32' src='{{ asset("assets/images/preloaders/5.svg") }}' />",
                    sLoadingRecords :"<img height='32' width='32' src='{{ asset("assets/images/preloaders/5.svg") }} />"
                },
                "processing": true,
                "serverSide": true,
                "searching": false,
                "ajax": {
                    "url": '{{ path('admin_macaron_demande_dt') }}',
                    "data": function (d) {
                        d.numero_carte_grise = $("#numero_carte_grise").val();
                        d.numero_recepisse = $("#numero_recepisse").val();
                        d.numero_immatriculation = $("#numero_recepisse").val();
                        d.identite_proprietaire = $("#identite_proprietaire").val();
                        d.identite_proprietaire_piece = $("#identite_proprietaire_piece").val();
                        d.numero_telephone_proprietaire = $("#numero_telephone_proprietaire").val();
                        d.receipt_number = $("#receipt_number").val();
                        d.quicksearch = $("#quicksearch").val();
                    }
                },
                "columns": [
                    {
                        "class":   "details-control",
                        "orderable": false,
                        "data":      "id",
                        "defaultContent": ""
                    },
                    {"data":  "numero_carte_grise"},
                    {"data":  "numero_recepisse"},
                    {"data":  "numero_immatriculation"},
                    { "data": "identite_proprietaire" },
                    { "data": "identite_proprietaire_piece" },
                    { "data": "numero_vin_chassis" },
                    { "data": "date_rendez_vous" },
                    { "data": "receipt_number" },
                    { "data": "status" },
                    { "data": "" },
                ],
                "order": [[1, 'asc']]
            } );


            return dt;
        }
    });
</script>
{% endblock %}
