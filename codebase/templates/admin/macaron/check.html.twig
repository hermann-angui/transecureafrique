{% block stylesheet %}
    {{ parent() }}
    <style>
       body{
           background-color: #ffffff;
       }
    </style>
{% endblock %}

{% block body %}
    <div id="layout-wrapper">
        <div class="container">
            <div class="d-flex justify-content-center">
                {% if valid is defined %}
                    <table style="width: 50%;background-color: #bad5ff; padding: 15px 15px;margin-bottom: 5px;">
                        <tr>
                            <td colspan="2" style="padding: 10px 10px; font-weight: bolder;color:#333232;border-bottom: 1px dashed #fff;">
                                <img src="{{ asset('frontend/assets/img/logo_district.png') }}" width="85">
                            </td>
                        </tr>
{#
                        <tr>
                            <td colspan="2">
                                <img src="{{ asset('frontend/assets/img/macaron_valid.jpg') }}" alt="macaron valide" width="50%">

                            </td>
                        </tr>#}

                        <tr>
                            <td colspan="2">
                                <span style="font-size: 35px; font-weight: bolder;padding: 10px 10px;color:#005f4b">VEHICULE AUTHENTIFIE</span>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-weight: bolder;padding: 10px 10px;color:#333232; border-bottom: 1px dashed #fff;">Num&eacute;ro vin/chassis</td>
                            <td style="padding: 10px 10px; font-weight: bolder; color:#333232; border-bottom: 1px dashed #fff;">{{ demande.NumeroVinChassis }}</td>
                        </tr>
                        <tr>
                            <td style="font-weight: bolder;padding: 10px 10px;color:#333232; border-bottom: 1px dashed #fff;">Num&eacute;ro immatriculation</td>
                            <td style="padding: 10px 10px; font-weight: bolder; color:#333232;  border-bottom: 1px dashed #fff;">{{ demande.NumeroImmatriculation }}</td>
                        </tr>
                        <tr>
                            <td style="font-weight: bolder;padding: 10px 10px; color:#333232; border-bottom: 1px dashed #fff;">Marque du v&eacute;hicule</td>
                            <td style="padding: 10px 10px; font-weight: bolder; color:#333232;  border-bottom: 1px dashed #fff;">{{ demande.MarqueDuVehicule }}</td>
                        </tr>
                        <tr>
                            <td style="font-weight: bolder;padding: 10px 10px; color:#333232; border-bottom: 1px dashed #fff;">Type commercial</td>
                            <td style="padding: 5px 5px; color:#333232;  font-weight: bolder; border-bottom: 1px dashed #fff;">{{ demande.TypeCommercial }}</td>
                        </tr>
                    </table>
                {% else %}
                    <img src="{{ asset('frontend/assets/img/macaron_fake.jpg') }}" alt="macaron valide" width="50%">
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}

