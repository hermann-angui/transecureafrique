{% block javascript %}
    <script src="{{ asset('frontend/libs/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('frontend/libs/inputmask/dist/jquery.inputmask.bundle.min.js') }}"></script>
    <script src="{{ asset('frontend/libs/inputmask/dist/jquery.inputmask.bundle.min.js') }}"></script>
    <script src="{{ asset('backend/libs/jquery.form/jquery.form.min.js') }}"></script>
    <script>
      $(document).ready(function(){
             $("#duplicate_alert").hide();
             $("#date_d_edition").inputmask();
             $("#date_de_premiere_mise_en_cirulation").inputmask();

             $('#uploadFormulaire').ajaxForm({
                url: '{{ path('demande_new') }}',
                dataType: 'json',
                type: 'POST',
                success: function(response) {
                  if(response==='nodata') return;
                  if(response==='duplicate'){
                      $("#duplicate_alert").show();
                       $('#numero_vin_chassis').focus();
                  }else{
                      $("#duplicate_alert").hide();
                      window.location.replace('/demande/recap/' + response);
                  }
                },
                error: function(xhr, textStatus, errorThrown) {
                  console.log(xhr.responseText);
                }
             });
      });
    </script>
