{% extends 'frontend/base.html.twig' %}

{% block title %}Historique des demandes{% endblock %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5" style="height:100vh">
        <div class="row mt-5 py-1">
            <h2 class="fs-4 my-4">
              HISTORIQUE DE VOS DEMANDES DE MACARON
            </h2>
            <div class="row mt-2">
                    <div class="table-responsive small">
                        <table id="datatable" class="table table-striped">
                            <thead>
                            <tr class="bg-light-gray">
                                <th scope="col">N째 CARTE GRISE</th>
                                <th scope="col">N째 RECEPISSE</th>
                                <th scope="col">N째 IMMATRICULATION</th>
                                <th scope="col">N째 VIN CHASSIS</th>
                                <th scope="col">STATUT</th>
                                <th scope="col">STATUT</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-center m-auto mt-5 py-5 w-100">
                        <input type="button" class="btn bg-warning w-25 mx-1" value="Nouvelle demande" id="btnNext">
                    </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
{{ parent() }}
<script>
    $(document).ready(function(){
         var datatable = initDatatable();

         function initDatatable(){
            /* DATATABLE INIT */
            var dt = $('#datatable').DataTable( {
                "responsive": true,
                "language": {
                    url: '//cdn.datatables.net/plug-ins/1.10.16/i18n/French.json',
                },
                "searching":false,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": '{{ path('demande_history_dt') }}',
                    "data": function (d) {
                        d.optcode = {{ optCode.id }};
                    }
                },
                "columns": [
                    { "data": "numero_carte_grise" },
                    { "data": "numero_recepisse" },
                    { "data": "numero_immatriculation" },
                    { "data": "numero_vin_chassis" },
                    { "data": "montant" },
                    { "data": "status" },
                    { "data": "" }
                ],
                "order": [[1, 'asc']]
            } );
            return dt;
        }
    })
</script>
{% endblock %}
