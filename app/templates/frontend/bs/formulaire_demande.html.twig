                                </div>
                                <div class="mb-3">
                                    <label for="type_technique" class="form-label">Type </label>
                                    <input type="text" class="form-control input" name="type_technique" id="type_technique" placeholder="">
                                </div>
                                <div class="mb-3">
                                    <label for="energie_vehicule" class="form-label">Source Energie</label>
                                    <select id="energie_vehicule" class="form-select input" name="energie_vehicule">
                                        <option value="ESSENCE" selected>ESSENCE</option>
                                        <option value="GAZOIL" >GASOIL</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="places_assises" class="form-label">Nombre de places</label>
                                    <input type="number" class="form-control input" name="places_assises" id="places_assises" placeholder="">
                                    <span>P T.A.C (Kg)</span>
                                </div>
                                <div class="mb-3">
                                    <label for="puissance_fiscale" class="form-label">Puissance </label>
                                    <input type="text" class="form-control input" name="puissance_fiscale" id="puissance_fiscale" placeholder="">
                                    <span>P.V (Kg)</span>
                                </div>
                                <div class="mb-3">
                                    <label for="couleur_vehicule" class="form-label">Couleur</label>
                                    <input type="text" class="form-control input" name="couleur_vehicule" id="couleur_vehicule" placeholder="">
                                </div>
                                <div class="mb-3 form-group">
                                    <label for="date_d_edition" class="form-label">Le présent récépissé est délivré le</label>
                                    <input type="text" class="form-control " id="date_d_edition" name="date_d_edition" data-inputmask="'alias': 'datetime'" data-inputmask-inputformat="dd/mm/yyyy" im-insert="false">
                                </div>
                                {% endif %}
                                <hr>
                                <div class="pt-3 my-3">
                                    <input type="hidden" id="otpcode" name="otpcode" value="{{ authid ?? '' }}"/>
                                    <button class="btn w-50" type="submit">Enregister</button>
                                </div>
                            </form>
                        </div>
                        <!-- end card body -->
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
        </div>
    </div>
{% endblock %}
