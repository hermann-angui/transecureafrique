{% extends 'frontend/base.html.twig' %}

{% block title %}Code d'accès{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <style>
        body {
            background-color: #f2f3f2
        }
        div.main {
            height: 50vh;
        }
        .form-signin {
            max-width: 500px;
            padding: 1rem;
            height: 50vh;
        }
        input.form-control  {
            text-align: center;
            color: var(--bs-body-color);
            background-color: var(--bs-body-bg);
            border-color: #006a53;
            outline: 0;
            box-shadow: 4px 3px 0 0rem #006a53;
        }

        .select ,.select:focus,
        input.form-control:focus {
            color: var(--bs-body-color);
            background-color: var(--bs-body-bg);
            border-color: #006a53;
            outline: 0;
            box-shadow: 2px 2px 0 0rem #006a53;
        }

        .btn-check:checked+.btn,
        .btn.active, .btn.show,
        .btn:first-child:active,
        :not(.btn-check)+.btn:active,
        button.btn:hover {
            color: #ffffff;;
            background-color: #e16a00;
            border: 1px solid #e16a00;
        }
        button.btn {
            font-size: 16px;
            font-weight: 600;
            color: #ffffff;
            border: 1px solid #ff7b00;
            border-radius: 3px;
            background-color: #ff7b00;
        }

        .input, .select select {
            width: 100%;
            height: 48px;
            background-color: #f9f9f9;
            border-radius: 3px;
            border: 1px solid #b2b2b2;
            box-shadow: none;
        }

        .form-label{
            color: var(--text-color);
            font-family: var(--font-text);
            box-sizing: border-box;
            display: block;
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: .5em;
            line-height: 1.375rem;
        }

    </style>
{% endblock %}

{% block body %}
<div class="main container mt-5 mb-5">
    <div class="row align-items-center py-5">
        <div class="col-xl-12">
            <div class="card py-5">
                <div class="card-body m-auto w-75">
                        <h5>RETROUVER LES INFORMATIONS DE VOTRE DEMANDE.</h5>
                        {% if macaron is defined %}
                            <div class="alert alert-danger  mb-3"><!---->
                                <h2 class="text-danger">Votre macaron est prêt, vous pouvez passer la retirer.</h2>
                            </div>
                            <img src="media/{{ macaron }}" width="700" height="700" alt="macaron">
                        {% elseif warning is defined %}
                            <div class="alert alert-warning  mb-3">
                                <h2 class="text-danger">{{ warning }}</h2>
                            </div>
                        {% else %}
                            <form action="{{ path('demande_search') }}" method="POST" class="row g-3">
                                    <div for="search_receipt_criteria">Recherche à partir de: </div>
                                    <div class="col-auto">
                                        <select id="search_receipt_criteria"  name="search_receipt_criteria" class="form-select select">
                                            <option value="numero_recu" selected>Numéro de reçu</option>
                                            <option value="numero_immatriculation" selected>Numéro d'immatriculation</option>
                                            <option value="numero_chassis" >Numéro chassis</option>
                                        </select>
                                    </div>
                                    <div class="col-auto">
                                        <label for="search_receipt_term" class="visually-hidden"></label>
                                        <input id="search_receipt_term"  name="search_receipt_term"   placeholder="" type="text" class="form-control">
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" class="btn btn-warning">Rechercher</button>
                                    </div>
                            </form>
                        {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascript %}
{{ parent() }}
  <script>
  $(document).ready(function(){
  });
  </script>
{% endblock %}
