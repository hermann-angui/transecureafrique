{% extends 'admin/base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('backend/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('backend/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}


{% block body %}
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">

        {{ include('admin/_partials/header.html.twig') }}

        <!-- ========== Left Sidebar Start ========== -->
        {{ include('admin/_partials/left-sidebar.html.twig')}}
        <!-- Left Sidebar End -->

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0 font-size-18">Membres</h4>
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Accueil</a></li>
                                        <li class="breadcrumb-item active">Liste des Membres</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body border-bottom">
                                    <div class="d-flex align-items-center">
                                        <h5 class="mb-0 card-title flex-grow-1"></h5>
                                        <div class="flex-shrink-0">
                                            <a href="{{ path('admin_demande_new') }}" class="btn btn-primary btn-sm waves-effect waves-light"><span class="fa fa-plus-circle fa-1x"></span> Nouveau membre</a>
                                            {# <a href="{{ path('admin_member_download_cards') }}" class="btn btn-primary btn-sm waves-effect waves-light"><span class="fa fa-download fa-1x"></span> Télécharger toutes cartes</a> #}
                                            <button type="button" class="btn btn-primary btn-sm waves-effect waves-light" data-bs-toggle="modal" data-bs-target=".bs-downloadcards"><span class="fa fa-download fa-1x"></span>Télécharger des cartes</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body border-bottom">
                                    <div class="row g-3">
                                        <div class="col-xxl-1 col-lg-1">
                                            <button id="refresh-btn" type="button" class="btn btn-soft-secondary w-100">Filtre<i class="mdi mdi-filter-outline align-middle"></i></button>
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="numero_carte_grise" placeholder="Carte grise">
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="numero_recepisse" placeholder="Numéro recepisse">
                                        </div>
                                        <div class="col-xxl-2 col-lg-6">
                                            <input type="search" class="form-control" id="numero_chassis" placeholder="Numéro de chassis">
                                        </div>

                                        <div class="col-xxl-2 col-lg-4">
                                            <select id="title" class="form-control select2"  title="Catégorie">
                                                <option>--Type--</option>
                                                <option value="Chauffeur">Chauffeur</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        {{ include('admin/member/_demande_datatable.html.twig') }}
                                    </div>
                                    <!--end row-->
                                </div>
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->
                </div> <!-- container-fluid -->
            </div><!-- End Page-content -->
            {{ include('admin/_partials/footer.html.twig') }}
        </div>
        <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <!-- Right Sidebar -->

    <!-- /Right-bar -->

    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script src="{{ asset('backend/libs/datatables.net/js/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('backend/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>

<script type="text/javascript">
    jQuery(document).ready(function ($) {

        var datatable = initDatatable();

        $("#numero_carte_grise,#numero_recepisse,#numero_chassis").change(function (e) {
                datatable.draw();
        });

       $("input[name='selection_type']").change(function(){
             if($(this).val() === "0"){
                $('#interval-row').hide();
             }else{
                  $('#interval-row').show();
             }
          });
        function initDatatable(){
            /* DATATABLE INIT */
            var dt = $('#datatable').DataTable( {
                "responsive": true,
                "language": {
                    url: '//cdn.datatables.net/plug-ins/1.10.16/i18n/French.json',
                    processing: "<img height='32' width='32' src='{{ asset("assets/images/preloaders/5.svg") }}' />",
                    sLoadingRecords :"<img height='32' width='32' src='{{ asset("assets/images/preloaders/5.svg") }} />"
                },
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": '{{ path('admin_member_datatable') }}',
                    "data": function (d) {
                        d.numero_chassis = $("#numero_chassis").val();
                        d.numero_recepisse = $("#numero_recepisse").val();
                        d.numero_chassis = $("#numero_chassis").val();
                    }
                },
                "columns": [
                    {"data":  "id"},
                    {"data":  "numero_carte_grise"},
                    {"data":  "numero_recepisse"},
                    {"data":  "numero_immatriculation"},
                    { "data": "date_de_premiere_mise_en_cirulation" },
                    { "data": "date_d_edition" },
                    { "data": "identite_proprietaire" },
                    { "data": "marque_du_vehicule" },
                    { "data": "genre_vehicule" },
                    { "data": "type_commercial" },
                    { "data": "couleur_vehicule" },
                    { "data": "carroserie_vehicule" },
                    { "data": "energie_vehicule" },
                    { "data": "places_assises" },
                    { "data": "usage_vehicule" },
                    { "data": "puissance_fiscale" },
                    { "data": "nombre_d_essieux" },
                    { "data": "cylindree" },
                    { "data": "numero_vin_chassis" },
                    { "data": "societe_de_credit" },
                    { "data": "type_technique" },
                    { "data": "montant" },
                    { "data": "numero_d_immatriculation_precedent" },
                    { "data": "qrcode" },
                    { "data": "type" },
                    { "data": "payment_type" },
                    { "data": "payment_type" },
                ],
                "order": [[1, 'asc']]
            } );


            return dt;
        }
    });
</script>
{% endblock %}
